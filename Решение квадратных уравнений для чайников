// ConsoleApplication13.cpp : Этот файл содержит функцию "main". Здесь начинается и заканчивается выполнение программы. 
// 
 
#include <iostream> 
using namespace std; 
 
int main() 
{ 
 setlocale(LC_ALL, "rus"); 
  
 int a, c, k, n; 
 float D, x1, x2, b; 
 do 
 { 
 cout « "Вводим a = "; 
 cin » a; 
 cout « "Вводим b = "; 
 cin » b; 
 cout « "Вводим c = "; 
 cin » c; 
 D = b * b - 4 * a * c; 
 cout « "Дискриминант равен " « D « endl; 
 if (D > 0) 
 { 
 if (a == 0) 
 { 
 cout « "a = 0. Не имеет смысла" « endl; 
 } 
 else 
 { 
 cout « "Уравнение имеет 2 корня" « endl; 
 x1 = (-b + (b * b - 4 * a * c)) / (2 * a); 
 cout « "Первый корень равен " « x1 « endl; 
 x2 = (-b - (b * b - 4 * a * c)) / (2 * a); 
 cout « "Второй корень равен " « x2 « endl; 
 } 
 } 
 if (D < 0) 
 { 
 cout « "Дискриминант меньше 0, следовательно корней нет" « endl; 
 } 
 if (D == 0) 
 { 
 if (a == 0) 
 { 
 cout « "На ноль делить нельзя" « endl; 
 } 
 cout « "Дискриминант равен 0, следовательно будет 1 корень" « endl; 
 x1 = (-b + (b * b - 4 * a * c)) / (2 * a); 
 cout « "x1 = " « x1 « endl; 
 } 
 
 cout « "Вы хотите снова решить еще одно уравнение?" « endl; 
 cout « "Если да, то нажмите 1, если нет - нажмите 2" « endl; 
 cin » k; 
 } while (k == 1); 
 if (k == 2) 
 { 
 cout « "Рад был помочь! Пока."; 
 } 
 
 return 0; 
} 
 
 
 
// Запуск программы: CTRL+F5 или меню "Отладка" > "Запуск без отладки" 
// Отладка программы: F5 или меню "Отладка" > "Запустить отладку" 
 
